<h1>Listing companies</h1>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Manager</th>
          <th>Status</th>
          <th>Terms</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
            <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.manager %></td>
            <td><%= company.status %></td>
            <td><%= company.terms %></td>
            <td><%= link_to 'Show', company , class:'btn btn-mini'%></td>
            <td><%= link_to 'Edit', edit_company_path(company), class:'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', company, method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

<h3> Importar Compa√±ias </h3>
  <%= form_tag import_companies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import Companies", class: 'btn btn-default'  %>
  <% end %>

<h3> Decargar archivo CSV </h3>
<%= link_to "Archivo Reporte", companies_path(format: "csv") , class: 'btn btn-default' %>

